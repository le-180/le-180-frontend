---
import { getCollection } from 'astro:content';
import PageLayout from '../../components/PageLayout.astro';

const autoren = await getCollection('autor');
const STRAPI_BASE_URL = import.meta.env.STRAPI_URL || 'http://localhost:1337';
---

<PageLayout>
    <h2 class="mt-10 text-3xl">Autoren</h2>
    <div class="grid mt-5 lg:grid-cols-3 gap-y-14 lg:gap-10">
        {
            autoren.map((autor) => (
                <div>
                    <div class="flex space-x-3 items-center">
                        {autor.data.profilbild && (
                            <div class="flex-shrink-0">
                                <img
                                    class="object-cover w-12 h-12 rounded-full"
                                    src={STRAPI_BASE_URL + autor.data.profilbild.url}
                                    alt="image"
                                />
                            </div>
                        )}
                        <div>
                            <h3 class="text-2xl font-bold">
                                {autor.data.vorname} {autor.data.nachname}
                            </h3>
                        </div>
                    </div>
                    <div class="flex mt-5 space-x-3">
                        <div class="flex flex-col">
                            <span class="font-medium" />
                            <span class="text-gray-500" />
                        </div>
                    </div>
                </div>
            ))
        }
    </div>
</PageLayout>
